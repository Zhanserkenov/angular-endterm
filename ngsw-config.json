{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",

  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    }
  ],

  "dataGroups": [
    {
      "name": "api-cache",
      "urls": [
        "https://dummyjson.com/products*",
        "https://dummyjson.com/products/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 100,
        "maxAge": "7d",
        "timeout": "10s"
      }
    }
  ],

  "navigationUrls": [
    "/**",
    "!/api/**",
    "!/**/*.(js|css)"
  ]
}
